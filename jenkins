pipeline {
    agent { label 'build_java_11'
    }
    options {
        timeout(time: 1, unit: 'HOURS')
    }
    triggers{
        cron('0 23 * * *')
    }
    stages {
        stage('Source Code') {
            steps {
                git url: 'https://github.com/chPooja0917/openmrs-daybuildnightbuild.git',
                branch: 'nightbuild'
            }
            
        }
        stage('Artifactory-Configuration') {
            steps {
                rtMavenDeployer (
                    id: 'openmrs-deployer',
                    serverId: 'JFROG_INSTANCE',
                    releaseRepo: 'learn-libs-release-local',
                    snapshotRepo: 'learn-libs-snapshot-local',
                    
                )
            }
        }
        stage('Build the Code and sonarqube-analysis') {
            steps {
                rtMavenRun (
                    // Tool name from Jenkins configuration.
                    tool: 'MVN_HOME',
                    pom: 'pom.xml',
                    goals: 'clean install',
                    // Maven options.
                    deployerId: 'openmrs-deployer',
                )

        
            }
        
        }
        stage('reporting') {
            steps {
                 junit testResults: 'target/surefire-reports/*.xml'
            }
        }
    }    
}